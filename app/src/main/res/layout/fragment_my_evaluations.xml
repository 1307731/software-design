<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.software.design.realestateapp.fragments.MyEvaluations">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/addEvaluationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Add Evaluation"
        android:textColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="18dp">

        <LinearLayout
            android:id="@+id/pastEvaluationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addEvaluationBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Past Evaluations"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@color/white" />
</RelativeLayout>
